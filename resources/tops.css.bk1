body {border:1px solid white; width:1300px; font-family:monospace;background-color:black;}
.list {position:relative; width:200px; margin: 20px 0px 0px 20px; padding:15px; float:left; background-color:#f3f3f3; overflow:hidden;}
h4 {margin-left:15px; margin-bottom: 7px;}
ol {margin-left:0; padding-left:20px;}
li {margin:0px 0px 0px;position:relative;}
li.first {list-style-image: url("http://icons.iconarchive.com/icons/google/noto-emoji-activities/16/52727-1st-place-medal-icon.png")}
li.second {list-style-image: url("http://icons.iconarchive.com/icons/google/noto-emoji-activities/16/52728-2nd-place-medal-icon.png")}
li.third {list-style-image: url("http://icons.iconarchive.com/icons/google/noto-emoji-activities/16/52729-3rd-place-medal-icon.png")}
li.up {background: url("https://upload.wikimedia.org/wikipedia/commons/8/8b/Green_Arrow_Up_Darker.svg") no-repeat right; background-size: 12px 12px;}
li.down {background: url("https://upload.wikimedia.org/wikipedia/commons/0/04/Red_Arrow_Down.svg") no-repeat right; background-size: 12px 12px;}
li span.stat {display:inline-block; position:absolute; bottom:0; right:0; vertical-align:bottom; font-size:.8em; color:gray;}
.icon {position:absolute; top:-10px; left:170px; opacity:.20}
.valor {color:red;}
.mystic {color:blue;}
.instinct {color:#baba02;}
.longName {font-size:.8em;}
.superLongName {font-size:.6em;}